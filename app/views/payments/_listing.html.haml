= smart_listing_controls_for(:payments) do
  .filter.input-append
    = text_field_tag :filter, '', class: "search", placeholder: "Type name here", autocomplete: "off"
    %button.btn.disabled{type: "submit"}
      %span.glyphicon.glyphicon-search

- unless smart_listing.empty?
  %table
    %thead
      %tr
        %th.col-md-3= "Edificio"
        %th.col-md-3= "Unidad"
        %th.col-md-4= "Fecha"
        %th.col-md-4= "Nombre"
        %th.col-md-4= "Monto"
        %th{:colspan => 3}
    %tbody
      - smart_listing.collection.each do |payment|
        %tr
          %td= payment.building_name
          %td= payment.unit
          %td= payment.date
          %td= payment.name
          %td= payment.amount
          %td= payment.unit
          %td= link_to 'Show', payment_path(payment)
          %td= link_to 'Edit', edit_payment_path(payment)
          %td= link_to 'Destroy', payment_path(payment), method: :delete, data: { confirm: 'Are you sure?' }

  = smart_listing.paginate
- else
  %p.warning No records! 